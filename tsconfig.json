{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@repositories": ["src/repositories/index.ts"],
      "@repositories/*": ["src/repositories/*"],
      "@usecases": ["src/usecases/index.ts"],
      "@usecases/*": ["src/usecases/*"],
      "@http": ["src/http/index.ts"],
      "@http/*": ["src/http/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "vitest.config.ts",
    "db/migrations/*.ts"
  ]
}
